// ============================================================
// Scale / DPI — Optimized for readability and screen real estate
//
// Laptop (eDP-1):  340x190mm → 128 DPI physical → 1.0 scale for crisp text
// Monitor (HDMI-1): 480x270mm → 92 DPI physical → 1.0 scale for consistency
//
// For HiDPI displays, adjust scale accordingly (e.g., 2.0 for 4K)
// ============================================================

output "eDP-1" {
    mode "1920x1080@60.008"
    scale 1.0
    position x=0 y=0
    // Enable adaptive sync if available
    adaptive-sync true
}

output "HDMI-A-1" {
    mode "1920x1080@74.973"
    scale 1.0
    position x=1920 y=0
    // Enable adaptive sync if available
    adaptive-sync true
}

// Fallback for unknown outputs
output "*" {
    scale 1.0
    mode "1920x1080@60"
}
